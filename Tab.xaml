<Window x:Class="ATNC.Tab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATNC"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowState="Maximized">
    <Grid x:Name="gr">
        <TextBox x:Name="state" Panel.ZIndex="9" Height="200" VerticalAlignment="Top" FontSize="15"/>
        <TextBox x:Name="tb_destination" Width="200" Panel.ZIndex="9" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button Content="OK" Margin="200,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Click="B_Direction_Click"/>
        <Button Margin="5, 200, 5, 5" Panel.ZIndex="9" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Left" Click="B_Left_Click"/>
        <Button Margin="5, 200, 5, 5" Panel.ZIndex="9" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Right" Click="B_Right_Click"/>
        <Button Margin="5,5,5,5" Content="Vytvořit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="B_Add_Car_Click"/>
    </Grid>
</Window>
